<!DOCTYPE html>
<html>
  <head>
    <title><%= page_title %> @ The Scotch Zone</title>
    <%= stylesheet_link_tag 'http://code.jquery.com/mobile/1.0a2/jquery.mobile-1.0a2.min.css' %>
    <%= javascript_include_tag 'http://code.jquery.com/jquery-1.4.4.min.js' %>
    <%= javascript_include_tag 'http://code.jquery.com/mobile/1.0a2/jquery.mobile-1.0a2.min.js' %>
    <%= csrf_meta_tag %>
  </head>
  <body>
    <div data-role="page">
      <div data-role="header">
        <h1>The Scotch Zone</h1>
      </div>

      <div data-role="content">
        <%= yield %>
      </div>

      <div data-role="footer" data-position="fixed">
        <div data-role="navbar">
          <ul>
            <li>
              <%= navigation_link_to 'Home', root_path %>
            </li>
            <% if signed_in? -%>
              <li>
                <%= link_to 'My Scotch Log', current_user %>
              </li>
            <% else %>
              <li><%= link_to "Sign up", sign_up_path(:return_to => request.path) %></li>
            <% end -%>
            <li><%= link_to 'Scotches', scotches_path %></li>
            <li><%= link_to 'Enthusiasts', users_path  %></li>
          </ul>
        </div>
      </div>
    </div>
  </body>
</html>
