
<dl>
  <dt>Age</dt>
  <dd><%= @scotch.age %></dd>
</dl>

<% @scotch.notes.each do |note| -%>
  <% div_for note do %>
    <p><%= link_to note.user, note.user %> wrote:</p>
    <blockquote><%= simple_format note.body %></blockquote>
  <% end %>
  <div>
  </div>
<% end %>

<%- semantic_form_for [@scotch, @note] do |form| %>
  <% form.inputs do %>
    <%= form.input :body %>
  <% end %>

  <%= form.buttons :commit %>
<% end %>
